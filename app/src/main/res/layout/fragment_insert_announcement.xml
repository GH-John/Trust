<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutAddAnnouncement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundApp"
    tools:context=".mainWorkspace.fragments.FragmentInsertAnnouncement">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingTop="@dimen/paddingTopFromActionBar"
            android:paddingBottom="@dimen/paddingBottomFromBottomNav">

            <TextView
                android:id="@+id/textAddPhotos"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/text_add_photos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textLimitAddPhotos"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="@string/text_limit_add_photos"
                app:layout_constraintBottom_toBottomOf="@+id/textAddPhotos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textAddPhotos" />

            <HorizontalScrollView
                android:id="@+id/scrollViewImg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textAddPhotos"
                tools:ignore="RtlSymmetry,ScrollViewCount">

                <com.application.arenda.ui.widgets.containerImg.ContainerSelectedImages
                    android:id="@+id/containerImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.application.arenda.ui.widgets.containerImg.ContainerSelectedImages>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textNotePhotos"
                style="@style/DefaultStyleTextBoldRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/text_note_photos"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollViewImg" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCounter"
                style="@style/DefaultStyleTextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:counterEnabled="true"
                app:counterMaxLength="70"
                app:counterTextColor="@color/colorHint"
                app:hintTextColor="@color/colorHint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNotePhotos">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fieldProductName"
                    style="@style/DefaultStyleTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_product_name"
                    android:inputType="textPersonName"
                    android:maxLength="70"
                    tools:ignore="Autofill,LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnSelectCategory"
                style="@style/DefaultStyleSecondaryBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/btn_white"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:text="@string/text_select_category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutCounter" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutCounter2"
                style="@style/DefaultStyleTextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:counterEnabled="true"
                app:counterMaxLength="10000"
                app:counterTextColor="@color/colorHint"
                app:hintTextColor="@color/colorHint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSelectCategory">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fieldDescription"
                    style="@style/DefaultStyleTextInputEditText.Multiline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/hint_product_description"
                    android:maxLength="10000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnSelectCategory"
                    tools:ignore="Autofill,LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textHourlyCost"
                style="@style/DefaultStyleTextBoldRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:text="@string/text_hourly_cost"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutCounter2" />

            <EditText
                android:id="@+id/fieldHourlyCost"
                style="@style/DefaultStyleField"
                android:layout_width="0dp"
                android:layout_marginTop="16dp"
                android:drawableEnd="@drawable/ic_usd"
                android:hint="@string/hint_cost_product"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textHourlyCost"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/textDailyCost"
                style="@style/DefaultStyleTextBoldRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:text="@string/text_daily_cost"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fieldHourlyCost" />

            <EditText
                android:id="@+id/fieldDailyCost"
                style="@style/DefaultStyleField"
                android:layout_width="0dp"
                android:layout_marginTop="16dp"
                android:drawableEnd="@drawable/ic_usd"
                android:hint="@string/hint_cost_product"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDailyCost"
                tools:ignore="Autofill" />

            <include
                android:id="@+id/layoutSeekBars"
                layout="@layout/seek_bars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fieldDailyCost" />

            <TextView
                android:id="@+id/textAffordableInfo"
                style="@style/DefaultStyleTextBoldRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:text="@string/text_additional_fields"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutSeekBars" />

            <CheckBox
                android:id="@+id/checkBoxWithSale"
                style="@style/DefaultStyleCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/check_box_with_sale"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textAffordableInfo" />

            <TextView
                android:id="@+id/textVisibleAddresses"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="@string/text_visible_addresses"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxWithSale" />

            <RadioGroup
                android:id="@+id/groupAdress"
                style="@style/DefaultStyleRadioGroupVertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textVisibleAddresses">

                <RadioButton
                    android:id="@+id/withoutAddress"
                    style="@style/DefaultStyleRadioBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/text_without_address" />

                <RadioButton
                    android:id="@+id/address_1"
                    style="@style/DefaultStyleRadioBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:checked="false"
                    tools:text="@string/text_some_text" />

                <RadioButton
                    android:id="@+id/address_2"
                    style="@style/DefaultStyleRadioBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:checked="false"
                    tools:text="@string/text_some_text" />

                <RadioButton
                    android:id="@+id/address_3"
                    style="@style/DefaultStyleRadioBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:checked="false"
                    tools:text="@string/text_some_text" />
            </RadioGroup>

            <Button
                android:id="@+id/btnInsertAddress"
                style="@style/DefaultStyleBtn.Small"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_white"
                android:text="@string/btn_insert_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/groupAdress" />

            <TextView
                android:id="@+id/textVisiblePhones"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="@string/text_visible_phones"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnInsertAddress" />

            <LinearLayout
                android:id="@+id/groupPhones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textVisiblePhones">

                <CheckBox
                    android:id="@+id/checkPhone_1"
                    style="@style/DefaultStyleCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_phone" />

                <CheckBox
                    android:id="@+id/checkPhone_2"
                    style="@style/DefaultStyleCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/hint_phone" />

                <CheckBox
                    android:id="@+id/checkPhone_3"
                    style="@style/DefaultStyleCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/hint_phone" />
            </LinearLayout>


            <Button
                android:id="@+id/btnInsertPhone"
                style="@style/DefaultStyleBtn.Small"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_white"
                android:text="@string/btn_insert_phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/groupPhones" />

            <Button
                android:id="@+id/btnCreateAnnouncement"
                style="@style/DefaultStylePrimaryBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:text="@string/btn_create_announcement"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnInsertPhone"
                tools:visibility="gone" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupAdditionalFields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="btnInsertPhone, btnInsertAddress, layoutSeekBars, layoutCounter2,textAffordableInfo,checkBoxWithSale,groupPhones,btnCreateAnnouncement,textVisiblePhones,groupAdress,textVisibleAddresses,fieldHourlyCost,textHourlyCost,fieldDailyCost, textDailyCost"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="245dp"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBarInsert"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="invisible" />

</RelativeLayout>