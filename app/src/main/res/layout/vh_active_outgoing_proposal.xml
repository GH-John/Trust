<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_proposal"
    android:layout_marginTop="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/proposalsCard"
        style="@style/DefaultStyleCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.44" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.47" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.97" />

            <ImageView
                android:id="@+id/itemImgProduct"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/todo"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@android:mipmap/sym_def_app_icon" />

            <View
                android:id="@+id/viewMargin"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounding_panel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/itemCloseProposal"
                style="@style/DefaultStyleImageBtn"
                android:layout_width="@dimen/size_indicator_proposals"
                android:layout_height="@dimen/size_indicator_proposals"
                android:contentDescription="@string/todo"
                android:src="@drawable/indicator_outgoing_proposals"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="@+id/itemUserAvatar" />

            <ImageView
                android:id="@+id/itemUserAvatar"
                android:layout_width="@dimen/user_avatar_width"
                android:layout_height="@dimen/user_avatar_height"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/todo"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/viewMargin"
                tools:src="@android:mipmap/sym_def_app_icon" />

            <TextView
                android:id="@+id/userLogin"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/itemUserAvatar"
                app:layout_constraintStart_toEndOf="@+id/itemUserAvatar"
                app:layout_constraintTop_toTopOf="@+id/itemUserAvatar"
                tools:text="@string/hint_login" />

            <TextView
                android:id="@+id/textStartRent"
                style="@style/DefaultStyleTextBoldRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_start_rent"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/dateRentalStart"
                app:layout_constraintStart_toStartOf="@+id/dateRentalStart" />

            <TextView
                android:id="@+id/dateRentalStart"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                tools:text="@string/some_date" />

            <TextView
                android:id="@+id/timeRentalStart"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/dateRentalStart"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                tools:text="@string/text_Time_00" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginBottom="4dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_item_calendar"
                app:layout_constraintBottom_toTopOf="@+id/guideline3"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_item_clock"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/guideline3" />

            <TextView
                android:id="@+id/textEndRent"
                style="@style/DefaultStyleTextBoldRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_end_rent"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/dateRentalEnd"
                app:layout_constraintStart_toStartOf="@+id/dateRentalEnd" />

            <TextView
                android:id="@+id/dateRentalEnd"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                tools:text="@string/some_date" />

            <TextView
                android:id="@+id/timeRentalEnd"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/dateRentalEnd"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                tools:text="@string/text_Time_00" />


            <TextView
                android:id="@+id/proposalCreated"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorHint"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_NO_NAME_Proposal"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                tools:ignore="SmallSp"
                tools:text="@string/some_date" />

            <Button
                android:id="@+id/btn_NO_NAME_Proposal"
                style="@style/DefaultStyleBtn.Small"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_red"
                android:text="@string/btn_text_finish_proposal"
                android:textColor="@color/colorWhite"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/viewMargin"
                app:layout_constraintStart_toStartOf="@+id/guideline2" />

            <ImageButton
                android:id="@+id/btnSendMessage"
                style="@style/DefaultStyleImageBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/item_send_message_black"
                app:layout_constraintBottom_toBottomOf="@+id/btn_NO_NAME_Proposal"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="@+id/btn_NO_NAME_Proposal" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>