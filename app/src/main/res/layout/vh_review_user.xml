<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="2dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/itemReviewUserLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_item_user_logo" />

        <TextView
            android:id="@+id/itemReviewUserLogin"
            style="@style/DefaultStyleTextBoldRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/itemReviewUserLogo"
            android:text="@string/hint_login" />

        <TextView
            android:id="@+id/itemReviewAnnouncementRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemReviewUserLogin"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/itemReviewUserLogo"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="@string/text_rate"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/itemUserReview"
            style="@style/DefaultStyleTextRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemReviewAnnouncementRating"
            android:layout_marginTop="16dp"
            android:text="@string/text_some_text" />

        <TextView
            android:id="@+id/itemReviewCreated"
            style="@style/DefaultStyleTextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemUserReview"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:text="@string/text_placement_date_announcement"
            android:textColor="@color/colorHint"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemUserReview"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/itemReviewCreated"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleReviewUpdated"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_updated"
                android:textColor="@color/colorHint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/itemReviewUpdated"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/text_placement_date_announcement"
                android:textColor="@color/colorHint"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>