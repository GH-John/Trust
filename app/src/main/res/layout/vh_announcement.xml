<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    tools:ignore="PrivateResource">

    <RelativeLayout
        android:id="@+id/layoutUserDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemUserLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_user_logo"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/textUserLogin"
            style="@style/DefaultStyleTextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/itemUserLogo"
            android:text="@string/hint_login"
            android:textSize="12sp"
            tools:ignore="RelativeOverlap" />

        <ImageButton
            android:id="@+id/itemAnnouncementMore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_background_dark"
            android:contentDescription="@string/todo"
            android:src="@drawable/ab_item_more_black" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/imgContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutUserDesc"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        tools:ignore="PrivateResource">

        <ImageView
            android:id="@+id/itemImgProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:minHeight="250dp"
            android:scaleType="centerCrop"
            android:transitionName="imgProduct" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/layoutDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgContainer"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/textRatingAnnouncement"
            style="@style/DefaultStyleTextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:text="@string/text_rate_announcement" />

        <TextView
            android:id="@+id/textCountRent"
            style="@style/DefaultStyleTextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/textRatingAnnouncement"
            android:drawableStart="@drawable/ic_count_rent"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:text="@string/text_count_rent"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/imgHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_heart_not_selected" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutNameCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutDesc"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        tools:ignore="PrivateResource">

        <TextView
            android:id="@+id/textNameProduct"
            style="@style/DefaultStyleTextRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:gravity="start"
            android:maxLines="3"
            android:text="@string/text_name_announcement"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textCostProduct"
            style="@style/DefaultStyleTextBoldRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end"
            android:maxLines="2"
            android:text="@string/text_cost_announcement"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/itemViewReviews"
        style="@style/DefaultStyleTextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutNameCost"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:text="@string/text_view_reviews"
        android:textColor="@color/colorHint"
        android:textSize="12sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemViewReviews"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textPlacementDate"
            style="@style/DefaultStyleTextRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="0.4"
            android:gravity="start"
            android:text="@string/text_placement_date_announcement"
            android:textColor="@color/colorHint"
            android:textSize="8sp"
            tools:ignore="SmallSp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@id/itemLocation"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/itemLocation"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center|right"
                android:maxLines="2"
                android:text="@string/text_lacation_announcement"
                android:textSize="12sp"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>