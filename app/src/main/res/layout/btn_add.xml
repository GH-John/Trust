<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutBtnAdd">

    <ImageView
        android:id="@+id/panelBtnAdd"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_office_bold_regular"
        android:text="@string/new_announcements"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/panelBtnAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/panelBtnAdd"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="@+id/btnTitle"
        app:layout_constraintEnd_toStartOf="@+id/btnTitle"
        app:layout_constraintTop_toTopOf="@+id/btnTitle"
        app:srcCompat="@drawable/ic_plus" />

</androidx.constraintlayout.widget.ConstraintLayout>