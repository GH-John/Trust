<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPatternCategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.florent37.expansionpanel.ExpansionHeader
        android:id="@+id/categoryExpansionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        app:expansion_headerIndicator="@id/categoryHeaderIndicator"
        app:expansion_layout="@id/categoryExpansionLayout">

        <RelativeLayout
            android:id="@+id/contentExpansionHeader"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/categoryIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_none"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/categoryTitle"
                style="@style/DefaultStyleTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/categoryHeaderIndicator"
                android:layout_toEndOf="@+id/categoryIcon"
                android:layout_toRightOf="@+id/categoryIcon"
                android:text="@string/text_some_text"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/categoryHeaderIndicator"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/ic_arrow_right"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

    </com.github.florent37.expansionpanel.ExpansionHeader>

    <com.github.florent37.expansionpanel.ExpansionLayout
        android:id="@+id/categoryExpansionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryExpansionHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvItemCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none" />

    </com.github.florent37.expansionpanel.ExpansionLayout>

</RelativeLayout>