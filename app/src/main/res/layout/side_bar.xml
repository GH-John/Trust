<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutSideBar">

    <ImageView
        android:id="@+id/backgroundSideBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/backgroundColorSideBar" />

    <ImageView
        android:id="@+id/panelSideBar"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/itemUserAccount"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/todo"
        android:elevation="2dp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="@+id/panelSideBar"
        app:layout_constraintTop_toTopOf="@+id/panelSideBar"
        app:srcCompat="@drawable/sb_item_user_account"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/itemUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/todo"
        android:fontFamily="@font/gotham_office_regular"
        android:text="Красуцкий Евгений"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemUserAccount"
        app:layout_constraintEnd_toStartOf="@+id/itemUserAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemUserAccount"
        tools:ignore="HardcodedText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@id/panelSideBar"
        app:layout_constraintEnd_toEndOf="@+id/panelSideBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemUserAccount" />
</androidx.constraintlayout.widget.ConstraintLayout>