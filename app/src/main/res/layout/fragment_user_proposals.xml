<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutProposals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundApp"
    android:paddingTop="@dimen/paddingTopFromActionBar"
    tools:context=".mainWorkspace.fragments.proposals.FragmentUserProposals">

    <com.gigamole.navigationtabstrip.NavigationTabStrip
        android:id="@+id/pagerTabLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:nts_active_color="@color/colorAccent"
        app:nts_color="@color/colorAccent"
        app:nts_corners_radius="3.5dp"
        app:nts_factor="0.8"
        app:nts_gravity="bottom"
        app:nts_inactive_color="@color/colorPrimary"
        app:nts_size="14sp"
        app:nts_type="point"
        app:nts_typeface="@font/gotham_office_regular"
        app:nts_weight="7dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pagerProposals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pagerTabLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:overScrollMode="never" />
</RelativeLayout>