<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DefaultNavigationTheme">
        <item name="android:colorControlHighlight">@color/backgroundItem</item>
    </style>

    <style name="DefaultNavigationShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="DefaultStyleTextRegular">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
    </style>

    <style name="DefaultStyleTextBoldRegular">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/gotham_office_bold_regular</item>
    </style>

    <style name="DefaultStyleTextRegular.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="DefaultStyleTextBoldRegular.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="DefaultStyleField">
        <item name="android:ems">10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:backgroundTint">@color/colorTransparent</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
    </style>

    <style name="DefaultStyleImageView">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="DefaultStylePrimaryBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gotham_office_bold_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="DefaultStyleSecondaryBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:fontFamily">@font/gotham_office_bold_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="DefaultStyleRadioGroup">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="DefaultStyleRadioBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
    </style>

    <style name="DefaultStyleCheckBox">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
    </style>

</resources>