<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="DefaultStyleField">
        <item name="android:ems">10</item>
        <item name="android:height">50dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:backgroundTint">@color/colorTransparent</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
    </style>

    <style name="DefaultStyleRadioBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
    </style>
</resources>