<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ViewImages" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="android:background">@color/colorBlack</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DefaultStyleRecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="DefaultStyleRecyclerView.PaddingTopBottom">
        <item name="android:paddingTop">@dimen/paddingTopFromActionBar</item>
        <item name="android:paddingBottom">@dimen/paddingBottomFromBottomNav</item>
    </style>

    <style name="DefaultStyleRecyclerView.PaddingTop">
        <item name="android:paddingTop">@dimen/paddingTopFromActionBar</item>
    </style>

    <style name="DefaultStyleRecyclerView.PaddingBottom">
        <item name="android:paddingBottom">@dimen/paddingBottomFromBottomNav</item>
    </style>

    <style name="DefaultTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_height">@dimen/height_tab_layout</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/DefaultTabTextAppearance</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DefaultTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="tabTextColor">@color/colorAccent</item>
        <item name="textSize">14sp</item>
        <item name="fontFamily">@font/gotham_office_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DefaultNavigationTheme">
        <item name="android:colorControlHighlight">@color/backgroundItem</item>
    </style>

    <style name="DefaultNavigationShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="DefaultStyleTextRegular">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
    </style>

    <style name="DefaultStyleTextBoldRegular">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/gotham_office_bold_regular</item>
    </style>

    <style name="DefaultStyleTextRegular.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="DefaultStyleTextBoldRegular.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="DefaultStyleTextInputLayout">
        <item name="android:ems">10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_height">@dimen/field_height</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:background">@drawable/field_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
    </style>

    <style name="DefaultStyleTextInputEditText">
        <item name="android:ems">10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:backgroundTint">@color/colorTransparent</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
    </style>

    <style name="DefaultStyleField">
        <item name="android:ems">10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_height">@dimen/field_height</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:background">@drawable/field_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
    </style>

    <style name="DefaultStyleTextInputEditText.Multiline">
        <item name="android:minHeight">@dimen/min_multiline_field_height</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="DefaultStyleImageView">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="DefaultStyleBtn.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:height">10dp</item>
    </style>


    <style name="DefaultStyleBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gotham_office_bold_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="DefaultStylePrimaryBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/btn_accent</item>
        <item name="android:fontFamily">@font/gotham_office_bold_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="DefaultStyleSecondaryBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:fontFamily">@font/gotham_office_bold_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="DefaultStyleImageBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/btn_background_dark</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="DefaultStyleRadioGroupVertical">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="DefaultStyleRadioGroupHorizontal">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="DefaultStyleRadioBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
    </style>

    <style name="DefaultStyleCheckBox">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gotham_office_regular</item>
    </style>

    <style name="DefaultStyleCardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <dimen name="field_height">43dp</dimen>
    <dimen name="min_multiline_field_height">70dp</dimen>
    <dimen name="height_tab_layout">30dp</dimen>
</resources>